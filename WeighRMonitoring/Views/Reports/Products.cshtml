@using WeighRMonitoring.ViewModels;
@model ReportsViewModel
@{
    ViewBag.Title = "Porducts";
    var navTitle = "Products";
}

<div class="row">
    <div class="col-md-8" style="height:5px;">

    </div>
    <div class="col-md-8 btn-group page-button-container">
        <button id="btnSubmit" type="button" class="col-md-2 btn button-black" style="float:right;margin-right:20px;">View Report</button>
    </div>
    <div class="col-md-8 weigh-page-container">
        <iframe id="iframeReportViewer" style="height:560px;width:99%" frameborder="0" scrolling="no"></iframe>
        @section scripts{
            <script>

                url = "../Reports/ReportViewerPanel.aspx?reportName=ProductsList";
                var rframe = document.getElementById("iframeReportViewer");
                if (rframe !== null) {
                    if (rframe.src) {
                        rframe.src = url;
                    } else if (rframe.contentWindow !== null && rframe.contentWindow.location !== null) {
                        rframe.contentWindow.location = url;
                    } else { rframe.setAttribute('src', url); }
                }

                $("#btnSubmit").click(function () {
                    url = "../Reports/ReportViewerPanel.aspx?reportName=ProductsList";
                    var rframe = document.getElementById("iframeReportViewer");
                    if (rframe !== null) {
                        if (rframe.src) {
                            rframe.src = url;
                        } else if (rframe.contentWindow !== null && rframe.contentWindow.location !== null) {
                            rframe.contentWindow.location = url;
                        } else { rframe.setAttribute('src', url); }
                    }
                });

            </script>
        }

    </div>

</div>
